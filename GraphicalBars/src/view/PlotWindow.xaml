<Window x:Class="GraphicalBars.src.view.PlotWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GraphicalBars"
        mc:Ignorable="d"
        Title="Graphical Bars Plot" Icon="/GraphicalBars;component/icons/GraphicalBarsIcon.png"
        Height="450" Width="700" MinHeight="450" MinWidth="700">

    <Border BorderBrush="{DynamicResource MenuBordersBrush}" BorderThickness="2">
        <Canvas Name="PlotCanvas" ClipToBounds="True" Background="White" SizeChanged="PlotCanvas_SizeChanged" MouseEnter="PlotCanvas_MouseEnter" MouseLeave="PlotCanvas_MouseLeave"
                MouseWheel="PlotCanvas_MouseWheel" MouseMove="PlotCanvas_MouseMove" MouseLeftButtonDown="PlotCanvas_MouseLeftButtonDown" MouseLeftButtonUp="PlotCanvas_MouseLeftButtonUp">
        </Canvas>
    </Border> 
</Window>
